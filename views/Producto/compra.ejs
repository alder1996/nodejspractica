<%- include ../Layouts_p/header.ejs%>
<h1><%= title %></h1>

<div class="container">
        <form method="POST" action="/Producto/BuscarCompra/" style="padding-left: 30px">
            <div class="row">
                <div class="col-md-4">
                    Fecha inicial
                    <input class="form-control " type="date" name="Fechainicio" id="Fechainicio" placeholder="">
                </div>
                <div class="col-md-4">
                    Fecha final
                    <input class="form-control" type="date" name="Fechafin" id="Fechafin" placeholder="">
                </div>
                <div class="col-md-4">
                        <input type="submit" style="margin-top: 23px" class="btn btn-primary" value="Buscar">
                </div>
            </div>
        </form>
  <hr>
    <div class="row">
        <table class="table">
            <tr>
                <th>No.</th>
                <th>Cliente</th>
                <th>Fecha</th>
            </tr>
            <% for(var i=0; i<Compra.length;i++){ %>
            <tr>
                    <td><%= Compra[i].CompraID %></td>
                    <td><%= Compra[i].Nombre %></td>
                    <td><%= Compra[i].Fecha%></td>
                    <td>
                    <div style="float: left">
                        <a href='/Producto/detalle/<%= Compra[i].CompraID %>' class="btn btn-warning">Detalle</a>
                    </div>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</div>

<%- include ../Layouts_p/footer.ejs%>
